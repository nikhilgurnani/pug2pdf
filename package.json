{
    "name": "pug2pdf",
    "version": "1.0.1",
    "description": "A simple wrapper for Pug and PDFShift.",
    "main": "index.js",
    "scripts": {
        "test": "ava ./__tests__/**/*.specs.js",
        "setup:dev": "rm -rf node_modules && rm package-lock.json && npm i",
        "setup:prod": "rm -rf node_modules && rm package-lock.json && npm i --production",
        "dev:watch": "npm run test -- --watch --verbose",
        "dev:watch:single": "ava --watch --verbose"
    },
    "keywords": [
        "pug2pdf",
        "pdfshift",
        "pdf",
        "pug",
        "generate pdf"
    ],
    "author": "Nikhil Gurnani (gurnanikhil@gmail.com)",
    "license": "SEE LICENSE IN LICENSE.MD IN THE ROOT FOLDER",
    "dependencies": {
        "debug": "^4.1.1",
        "pdfshift": "^2.0.1",
        "pug": "^2.0.4"
    },
    "repository": {
        "url": "https://github.com/nikhilgurnani/pug2pdf",
        "type": "git"
    },
    "xo": {
        "esnext": true,
        "semicolon": true,
        "space": 4,
        "rules": {
            "space-in-parens": [
                "error",
                "always"
            ],
            "padded-blocks": [
                "error",
                "always"
            ],
            "array-bracket-spacing": [
                "error",
                "always"
            ],
            "object-curly-spacing": [
                "error",
                "always"
            ],
            "template-curly-spacing": [
                "error",
                "always"
            ],
            "computed-property-spacing": [
                "error",
                "always"
            ],
            "func-names": [
                "error",
                "always"
            ],
            "comma-dangle": [
                "error",
                "only-multiline"
            ]
        }
    },
    "devDependencies": {
        "ava": "^3.5.1",
        "nock": "^12.0.3"
    }
}
